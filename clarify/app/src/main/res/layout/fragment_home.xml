<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/carview_1"
            android:orientation="horizontal"
            android:paddingBottom="70dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_home_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto_condensed_bold_italic"
            android:text="Estos son"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:alpha="0.7"
            android:fontFamily="@font/roboto_bold"
            android:text="tus datos, name"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/txt_home_1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_user">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/shoppingcart1" />

                    <TextView
                        android:id="@+id/hello_msg_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Tu carrito"
                        android:textColor="#757575"
                        android:textSize="22sp"
                        app:layout_constraintTop_toBottomOf="@id/edit_data" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center|bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/purchase_ly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/purchase_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#757575"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:fontFamily="@font/roboto_condensed_bold_italic"
                            android:text="Productos"
                            android:textAlignment="center"
                            android:textColor="#757575"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view_1"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/put_tag" />

                    <LinearLayout
                        android:id="@+id/check_purchase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/check_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#757575"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:fontFamily="@font/roboto_condensed_bold_italic"
                            android:text="Marcados"
                            android:textAlignment="center"
                            android:textColor="#757575"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/put_tag" />

                    <LinearLayout
                        android:id="@+id/show_invitation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/pending_invitation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/pending_invitation_txt"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+99 nuevas"
                                android:fontFamily="@font/roboto_condensed_bold_italic"
                                android:textColor="#EF2929"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/invitation_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#757575"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:fontFamily="@font/roboto_condensed_bold_italic"
                            android:text="Invitaciones"
                            android:textAlignment="center"
                            android:textColor="#757575"
                            android:textSize="17sp" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/open_shopping_cart"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_dos"
                        android:text="Abrir carrito"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/settings" />

                    <TextView
                        android:id="@+id/hello_msg_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Ajustes rápidos"
                        android:textColor="#757575"
                        android:textSize="22sp"
                        app:layout_constraintTop_toBottomOf="@id/edit_data" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:id="@+id/empty">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/stop" />


                        <TextView
                            android:layout_marginStart="3dp"
                            android:layout_width="wrap_content"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:fontFamily="@font/roboto_condensed_bold_italic"
                            android:text="Aún no hay nada en tu lista. Los ajustes rápidos están desactivados hasta que trabajes con ella."
                            android:textColor="#757575"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/check_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:contentDescription="Marcar todos los productos del carrito"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="49dp"
                                android:layout_height="49dp"
                                android:src="@drawable/check_true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.7"
                                android:fontFamily="@font/roboto_condensed_bold_italic"
                                android:text="Marcar todos"
                                android:textAlignment="center"
                                android:textColor="#757575"
                                android:textSize="17sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/uncheck_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:contentDescription="Desmarcar todos los productos del carrito"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="49dp"
                                android:layout_height="49dp"
                                android:src="@drawable/check_false"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.7"
                                android:fontFamily="@font/roboto_condensed_bold_italic"
                                android:text="Desmarcar todos"
                                android:textAlignment="center"
                                android:textColor="#757575"
                                android:textSize="17sp" />

                        </LinearLayout>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:id="@+id/fast_delete_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:contentDescription="Borrar todos los productos del carrito"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/bin"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.7"
                                android:fontFamily="@font/roboto_condensed_bold_italic"
                                android:text="Borrar todo"
                                android:textAlignment="center"
                                android:textColor="#757575"
                                android:textSize="17sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:id="@+id/delete_all_friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:contentDescription="Eliminar todas las invitaciones de la lista"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="49dp"
                                android:layout_height="49dp"
                                android:src="@drawable/lock"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.7"
                                android:fontFamily="@font/roboto_condensed_bold_italic"
                                android:text="Cancelar acceso"
                                android:textAlignment="center"
                                android:textColor="#757575"
                                android:textSize="17sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>